<%- model_class = Actionable -%>
<div class="page-header">
  <h1><%=t '.title', :default => Actionable %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:student_requested_job) %></dt>
      <dd><pre class="prettyprint"><%= @actionable.student_requested_job %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:employeer_requested_student_for_job) %></dt>
      <dd><pre class="prettyprint"><%= @actionable.employeer_requested_student_for_job %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:student_approved_for_job) %></dt>
      <dd><pre class="prettyprint"><%= @actionable.student_approved_for_job %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:appeared_at_job) %></dt>
      <dd><pre class="prettyprint"><%= @actionable.appeared_at_job %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:student_did_job_well) %></dt>
      <dd><pre class="prettyprint"><%= @actionable.student_did_job_well %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              actionables_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_actionable_path(@actionable), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              actionable_path(@actionable),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

