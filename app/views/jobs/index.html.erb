<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Starting date</th>
      <th>Starting time</th>
      <th>Ending date</th>
      <th>Ending time</th>
      <th>Location</th>
      <th>Wage</th>
      <th>Num minyawns</th>
      <th>Description</th>
      <th>Business</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= job.starting_date %></td>
        <td><%= job.starting_time %></td>
        <td><%= job.ending_date %></td>
        <td><%= job.ending_time %></td>
        <td><%= job.location %></td>
        <td><%= job.wage %></td>
        <td><%= job.num_minyawns %></td>
        <td><%= job.description %></td>
        <td><%= job.business %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

