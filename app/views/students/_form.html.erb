<%= simple_form_for(@student) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :college %>
    <%= f.input :major %>
    <%= f.input :linkedin %>
    <%= f.input :facebook %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
